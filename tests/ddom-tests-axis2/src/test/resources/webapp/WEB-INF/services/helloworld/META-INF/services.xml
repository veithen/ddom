<serviceGroup>
    <service name="helloworld">
        <messageReceivers>
            <messageReceiver mep="http://www.w3.org/ns/wsdl/in-out" class="com.googlecode.ddom.tests.axis2.helloworld.HelloworldMessageReceiverInOut"/>
        </messageReceivers>
        <parameter name="ServiceClass">com.googlecode.ddom.tests.axis2.helloworld.HelloworldSkeleton</parameter>
        <parameter name="useOriginalwsdl">true</parameter>
        <parameter name="modifyUserWSDLPortAddress">true</parameter>
        <operation name="sayHello" mep="http://www.w3.org/ns/wsdl/in-out" namespace="http://ddom.googlecode.com/tests/axis2/helloworld">
            <actionMapping>http://www.example.org/helloworld/sayHello</actionMapping>
            <outputActionMapping>http://ddom.googlecode.com/tests/axis2/helloworld/helloworld/sayHelloResponse</outputActionMapping>
        </operation>
    </service>
</serviceGroup>
