mime:part>                        <mime:content part="attachment" type="application/octet-stream"/>                    </mime:part>                </mime:multipartRelated>            </input>            <output>                <soap:body use="literal" namespace="urn:attachments"/>            </output>        </operation>    </binding>    <service name="AttachmentsService">        <port name="AttachmentsPort" binding="tns:AttachmentsBinding">            <soap:address location="REPLACE_WITH_ACTUAL_URL"/>        </port>    </service></definitions>